<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="260dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="upploaded img"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/iv_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/iv_photo"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="@+id/iv_photo"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_photo"
            tools:ignore="TextSizeCheck"
            tools:text="Name" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="70dp"
            android:layout_height="14dp"
            android:lines="3"
            android:text="@string/place"
            android:textColor="@color/grey"
            android:textSize="10sp"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/tv_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4,5"
            android:textAlignment="gravity"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/star"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_rating"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <ImageView
            android:id="@+id/iv_crime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toStartOf="@+id/tv_city"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_city"
            card_view:srcCompat="@drawable/crime_aman" />

        <ImageView
            android:id="@+id/iv_bencana"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_crime"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_city"
            card_view:srcCompat="@drawable/bencana_aman" />

        <TextView
            android:id="@+id/tv_decription"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginTop="4dp"
            android:text="@string/test"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_name"
            card_view:layout_constraintStart_toStartOf="@+id/tv_name"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_bencana" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="40000"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_decription"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_decription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>